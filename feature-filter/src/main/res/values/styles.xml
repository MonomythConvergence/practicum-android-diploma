<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchIcon">
        <item name="android:layout_marginVertical">@dimen/dp_4</item>
        <item name="android:layout_marginEnd">@dimen/dp_4</item>
        <item name="android:padding">@dimen/dp_16</item>

    <style name="NewTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginHorizontal">@dimen/dimens_16</item>
        <item name="android:layout_marginVertical">@dimen/dimens_24</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:hint">@string/filter_screens_salary_expectations</item>
        <item name="android:textColorHint">@color/searchBarHintTextColor</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimens_12</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimens_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimens_12</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimens_12</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconDrawable">@drawable/clear_search</item>
        <item name="endIconMode">clear_text</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintTextAppearance">@style/TextViewRegular12</item>
        <item name="hintTextColor">@color/blue</item>

    </style>

    <style name="SearchBarIcon">
        <item name="android:layout_marginVertical">@dimen/dp_4</item>
        <item name="android:layout_marginEnd">@dimen/dp_4</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:padding">@dimen/dp_12</item>
    <style name="NewTextInputEdit" parent="Widget.Design.TextInputEditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/blue_text_cursor_drawable</item>
        <item name="android:hint">@string/filter_screens_enter_sum</item>
        <item name="android:textAppearance">@style/TextViewRegular16</item>
        <item name="android:textColorHint">@color/searchBarHintTextColor</item>
    </style>
</resources>
