<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/searchVacancyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/vacancyPadding"
        android:paddingStart="@dimen/vacancyTextPadding"
        android:paddingEnd="@dimen/vacancyCardPadding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/logo" />

        <TextView
                android:id="@+id/searchVacancyNameAndCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextViewMedium22"
                android:padding="@dimen/noPadding"
                android:layout_marginStart="@dimen/vacancyMargin"
                android:layout_marginEnd="@dimen/vacancyTextPadding"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="@string/search_vacancy_name_placeholder"
                app:layout_constraintStart_toEndOf="@id/searchVacancyImage"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/searchVacancyCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextViewRegular16"
                android:padding="@dimen/noPadding"
                android:layout_marginStart="@dimen/vacancyMargin"
                android:layout_marginEnd="@dimen/vacancyTextPadding"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="@string/vacancy_company_name_placeholder"
                app:layout_constraintStart_toEndOf="@id/searchVacancyImage"
                app:layout_constraintTop_toBottomOf="@id/searchVacancyNameAndCity"/>
            <TextView
                android:id="@+id/searchVacancySalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextViewRegular16"
                android:padding="@dimen/noPadding"
                android:layout_marginStart="@dimen/vacancyMargin"
                android:layout_marginEnd="@dimen/vacancyTextPadding"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="@string/vacancy_salary_placeholder"
                app:layout_constraintStart_toEndOf="@id/searchVacancyImage"
                app:layout_constraintTop_toBottomOf="@id/searchVacancyCompany"/>
</androidx.constraintlayout.widget.ConstraintLayout>
