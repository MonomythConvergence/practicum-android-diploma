<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/vacancyTextPadding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/searchVacancyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/vacancyCardPadding"
            android:paddingVertical="@dimen/vacancyCardPadding"
            android:src="@drawable/logo"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/vacancyCardPadding">
            <TextView
                android:id="@+id/searchVacancyNameAndCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewMedium22"
                android:padding="@dimen/noPadding"
                android:text="@string/search_vacancy_name_placeholder"/>
            <TextView
                android:id="@+id/searchVacancyCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewRegular16"
                android:padding="@dimen/noPadding"
                android:text="@string/vacancy_company_name_placeholder"/>
            <TextView
                android:id="@+id/searchVacancySalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewRegular16"
                android:padding="@dimen/noPadding"
                android:text="@string/vacancy_salary_placeholder"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
