<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.TeamFragment"
    android:background="@color/background">
    <ImageView
        android:id="@+id/mask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/mask"/>
    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team"
        android:textSize="22dp"
        android:fontFamily="@font/ys_display_medium"
        android:padding="19dp"
        android:textColor="@color/primaryTextAndUIColor"
        app:layout_constraintTop_toBottomOf="@id/mask" />
    <TextView
        android:id="@+id/who_works"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team_screen_text"
        android:fontFamily="@font/ys_display_bold"
        android:textSize="32dp"
        android:padding="19dp"
        android:textColor="@color/primaryTextAndUIColor"
        app:layout_constraintTop_toBottomOf="@id/team" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team_screen_developer_list"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="16dp"
        android:padding="19dp"
        android:textColor="@color/primaryTextAndUIColor"
        app:layout_constraintTop_toBottomOf="@id/who_works" />


</androidx.constraintlayout.widget.ConstraintLayout>
